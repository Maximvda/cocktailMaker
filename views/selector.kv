<Selector>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: "25dp"
        padding: "15dp"
        TitleLabel:
            halign: 'center'
            text: "Cocktail maker"
        Carousel:
            id: mycarousel
            size_hint: 0.75, 0.7
            pos_hint: {'x': .125, 'y': .2}
