            Cocktail:
                id: cocktail_15
            Cocktail:
                id: cocktail_16
        MDBoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.07
            spacing: "20sp"
            Widget:
            MDFillRoundFlatButton:
                text: 'Random'
                on_release:
                    root.randomise()
            MDFillRoundFlatButton:
                text: 'Create'
            Widget:
        Widget:
            size_hint: 1, 0.03



<Cocktail>
    padding: 4
    size_hint: 1, 1
    #size: "350dp", "130dp"
    elevated: "10dp"
    md_bg_color: "#eeeee4"

    MDStackLayout:
        spacing: "9sp"
        padding: "15dp", "10dp"
        #orientation: 'vertical'
        BigLabel:
            padding: "0dp", "25dp"
            id: lbl_title
        AsyncImage:
            id: image
            #size_hint_y: 0.4
            size_hint: None, None
            size: "200dp", "200dp"
        NormalLabel:
            size_hint: None, None
            valign: "top"
            size: "260dp", "300dp"
            id: lbl_all
